@page
@model NorthwindWeb.Pages.SuppliersModel
@addTagHelper *,  Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<div class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr><th>Company Name</th></tr>
        </thead>
        <tbody>
            @foreach (string name in Model.Suppliers)
            {
                <tr><td>@name</td></tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <p>Add a new supplier</p>
    <form method="post">
        <div><input asp-for="Supplier.CompanyName" placeholder="Comany Name"/></div>
        <div><input asp-for="Supplier.Country" placeholder="Country"/></div>
        <div><input asp-for="Supplier.Phone" placeholder="Pnone"/></div>
        <input type="submit" />
    </form>
</div>